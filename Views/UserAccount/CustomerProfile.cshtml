@model List<Raythos_Aerospace.Models.entities.OrderEntity>

@{
    ViewData["Title"] = "My Orders";
}

<div class="row">
    <br /><br /><br /><br />
    <div class="col-md-8 offset-2" style="border: 1px solid #000;">
        <div class="text-center">
            <br /><br />
            <h2>My Orders</h2><br /><br />
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Order Id</th>
                    <th>Order Date</th>
                    <th>Aircraft Model</th>
                    <th>Price</th>
                    <th>Order Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.Id</td>
                        <td class="align-middle">@order.OrderDate.ToString("dd-MM-yyyy")</td>
                        <td class="align-middle">@order.AircraftModel.ModelName</td>
                        <td class="align-middle">@order.Price</td>
                        <td class="align-middle">@order.OrderStatus</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
