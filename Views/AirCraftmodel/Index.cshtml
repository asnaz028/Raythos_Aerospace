@{
    ViewData["Title"] = "List of AirCraft Models";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px; ">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-dark">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.ModelName
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="~/images/A1.jpg" width="100%" alt="@item.ModelImage">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <!-- Display other properties of AirCraftmodel -->
                            <p class="card-text"><b>SKU: </b>@item.SKU</p>
                            <p class="card-text"><b>WEIGHT: </b>@item.Weight KGS</p>
                            <p class="card-text"><b>SHIPPING </b>Calculated at Checkout</p>
                            <p class="card-text"><b>Price </b>Rs @item.BasePrice</p>
                            <p class="card-text ">
                                <b>Status: </b>
                               
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                               
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-success text-white"
                                   href="#"
                                   data-aircraft-model-id="@item.Id"
                                   data-price="@item.BasePrice"
                                   data-quantity="1"
                                   onclick="addToCart(this, '@item.ModelName', '@item.BasePrice')">
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.BasePrice.ToString("c"))
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script>
    function addToCart(clickedElement, itemName, itemPrice) {
        var aircraftModelId = $(clickedElement).data('aircraft-model-id');
        var price = $(clickedElement).data('price');
        var quantity = $(clickedElement).data('quantity');

        // Use AJAX to add the item to the cart
        $.ajax({
            type: 'POST',
            url: '@Url.Action("AddToCart", "AirCraftmodel")',
            data: {
                aircraftModelId: aircraftModelId,
                price: price,
                quantity: quantity
            },
            success: function (data) {
                // Handle success, for example, show a confirmation message
                Swal.fire({
                    title: 'Item Added to Cart',
                    text: `${itemName} has been added to your cart.`,
                    icon: 'success',
                    confirmButtonText: 'OK',
                    onClose: function () {
                        // Redirect to the shopping cart page after the alert is closed
                        window.location.href = '/AirCraftmodel/ShoppingCart';  // Adjust the URL as needed
                    }
                });
            },
            error: function (error) {
                // Handle error
                console.error(error);
            }
        });
    }
</script>