@{
    Layout = null;
}
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Raythos Aeroscopes Admin - Dashboard</title>

    <link href="~/lib/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="~/lib/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <link href="~/lib/Content/css/sb-admin.css" rel="stylesheet">

    @*
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <script src="https://kit.fontawesome.com/9e97c1b3ed.js" crossorigin="anonymous"></script>

</head>

<body id="page-top">
    <div id="content-wrapper">
        <br /><br />
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-md-6 offset-3" style="border: 1px solid #000;">
                    <div class="text-center">
                        <br />
                        <div class="align-middle">
                            <img class="rounded-circle" src="~/images/logo.png" alt="logo" style="max-width: 130px" />
                        </div>
                        <h4>Admin Login</h4>
                    </div>
                    <br /><br />
                    @if (TempData["Error"] != null)
                    {
                        <div class="col-md-12 alert alert-danger">
                            <span><b>Sorry!</b> - @TempData["Error"] </span>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-8 offset-2">
                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label class="control-label">Username</label>
                                    <input class="form-control" />
                                    <span class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Password</label>
                                    <input class="form-control" type="password" />
                                    <span class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input class="btn btn-outline-info bg-info text-white float-right btn-block" type="submit" value="Log in" asp-controller="Admin" asp-action="Dashboard" />

                                </div>
                                <br /><br /><br /><br />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>

</html>