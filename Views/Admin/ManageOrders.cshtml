@*@using eTickets.Data.ViewModels;
    @model ShoppingCartVM*@

@{
    ViewData["Title"] = "Manage Orders";
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <br /><br /><br /><br />
    <div class="col-md-10 offset-1" style="border: 1px solid #000;">
        <div class="text-center">
            <br /><br />
            <h2>Manage Orders</h2><br /><br />
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Order Id</th>
                    <th>Order Date</th>
                    <th>Aircraft Model</th>
                    <th>Price</th>
                    <th>Order Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.Id</td>
                        <td class="align-middle">@order.OrderDate.ToString("dd-MM-yyyy")</td>
                        <td class="align-middle">@order.AircraftModel.ModelName</td>
                        <td class="align-middle">@order.Price</td>
                        <td class="align-middle">@order.OrderStatus</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="UpdateOrderStatus" asp-route-id="@order.Id">
                                <i class="bi bi-pencil-square"></i>Edit Status
                            </a>
                            <a class="btn btn-outline-primary" asp-action="ShippingandDelivary" asp-route-id="@order.Id">
                                <i class="bi bi-pencil-square"></i>Shipping & Delivery
                            </a>
                            <a class="btn btn-danger text-white" onclick="Delete(@order.Id)">
                                <i class="bi bi-trash"></i>Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>



    </div>
</div>


}

<script>
     
    function Delete( ) {
        // Your existing logic to add the item to the cart goes here

        // Show SweetAlert
        Swal.fire({
            title: 'Order Details Deleted Successfully !',

            icon: 'success',
            confirmButtonText: 'OK',

        });
    }
</script>