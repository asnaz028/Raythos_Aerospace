    @model RegisterVM;
*@
@{
    ViewData["Title"] = "Update Order Status";
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-6 offset-3">
        <div class="text-center">
            <br /><br />
            <h2>Update Order Status</h2>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2" style="border: 1px solid #000;">
                <form id="myForm" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group font-weight-bold">
                        <label class="control-label">Order ID : 1</label>&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                    <div class="form-group font-weight-bold">
                        <label class="control-label">Order Date : 23-11-2023</label><br />
                    </div>
                    <div class="form-group font-weight-bold">
                        <label class="control-label">Aircraft Model :  PPC Sprint Air ATR-72-500 1/100</label>&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                    <div class="form-group font-weight-bold">
                        <label class="control-label">Price : 4500000</label>
                    </div>
                    <div class="form-row">


                        <div class="form-group">
                            <label class="control-label">Order Status</label>
                            <select class="form-control" id="orderStatus" name="orderStatus">
                                <option value="pending">Pending</option>
                                <option value="processing">Processing</option>
                                <option value="processing">Ready To Dispatche</option>
                                <option value="shipped">Dispatched</option>
                                <option value="delivered">Delivered</option>
                            </select>
                            <span class="text-danger"></span>
                        </div> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <div class="form-group">
                            <label class="control-label">Estimated Delivery Date</label>
                            <input class="form-control" type="date" required />
                            <span class="text-danger"></span>
                        </div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


                    </div>


                    <div class="form-group">
                        <input class="btn btn-outline-success  btn-block bg-info text-white" type="submit" onclick="update()" value="Update" />

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('myForm').addEventListener('submit', function (e) {
        e.preventDefault(); // Prevent the default form submission


        // Display Sweet Alert
        Swal.fire({
            title: 'Inventory Updated Successfully !',

            icon: 'success',
            confirmButtonText: 'OK'
        });


    });
</script>